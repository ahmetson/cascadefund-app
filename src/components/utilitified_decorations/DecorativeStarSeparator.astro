---
import { StarIcon } from "../icon";
---

<!-- Decorative separator -->
<div class="flex items-center justify-center gap-4">
  <div
    class="flex-1 h-px bg-gradient-to-r from-transparent via-slate-300 to-slate-300 dark:via-slate-600 dark:to-slate-600"
  >
  </div>
  <div class="flex items-center gap-2">
    <StarIcon
      client:load
      class="w-4 h-4 text-yellow-500 dark:text-yellow-600"
    />
    <StarIcon
      client:load
      class="w-3 h-3 text-yellow-500 dark:text-yellow-600"
    />
    <StarIcon
      client:load
      class="w-2 h-2 text-yellow-500 dark:text-yellow-600"
    />
  </div>
  <div
    class="flex-1 h-px bg-gradient-to-l from-transparent via-slate-300 to-slate-300 dark:via-slate-600 dark:to-slate-600"
  >
  </div>
</div>
